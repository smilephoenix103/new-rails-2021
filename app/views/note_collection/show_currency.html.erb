		<div class="col btn btn-secondary btn-sm logo-center" style="margin:10px;">
			<%= link_to (currency.currency_series.to_s), show_note_path(currency), style:"color:black" %>
			
		</div>
	<% end %>
		<div class="col btn btn-secondary btn-sm logo-center" style="margin:10px;">
			<%= link_to ('ALL NOTE COLLECTION - ' + @notes_size.to_s), show_all_notes_path(@currencies[0].country_id), style:"color:black" %>
