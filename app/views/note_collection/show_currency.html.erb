<div class="container">
	<div class="container row">
		<div class="col-md-2">
			<%= link_to (render 'renders/button_back'), back_to_country_note_collection_path(@currencies[0].country.continent), class:"btn btn-secondary btn-sm" %>
			<h3>WALUTY</h3>
		</div>
		<div class="col-md-8">
			<%= render 'renders/show_flag_country' %>
		</div>			
		<div class="col-md-2">
		</div>
	</div>
</div>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 row-cols-lg-6">
