<div style="text-align:center">
  <h1>Kody sygnatur</h1>
</div>

<table class="table table-sm table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Kod Sygnatury</th>
      <th>Nazwa</th>
      <th>Description</th>
      <% if user_signed_in? && current_user.role == 'admin' %>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @signatures.each do |signature| %>
      <tr>
        <td><%= signature.signature_cod %></td>
        <td><%= signature.short_name %></td>
        <td><%= signature.description %></td>
        <% if user_signed_in? && current_user.role == 'admin' %>
          <td><%= link_to (render 'renders/button_show'), signature, class:"btn btn-info btn-sm" %></td>
          <td><%= link_to (render 'renders/button_edit'), edit_signature_path(signature), class:"btn btn-primary btn-sm" %></td>
          <td><%= link_to (render 'renders/button_delete'), signature, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? && current_user.role == 'admin' %>
  <%= link_to 'Dodaj Sygnature', new_signature_path, class:"btn btn-primary btn-sm" %>
<% end %>
