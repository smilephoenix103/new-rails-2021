<div style="text-align:center">
  <h1><%= t('signature_codes')  %></h1>
</div>
<div class="container">
  <% if user_signed_in? && current_user.role == 'admin' %>
    <%= link_to (t('helpers.submit.signature.create')), new_signature_path, {class:"btn btn-primary btn-sm", 'data-toggle' => "modal", 'data-target' => "#staticBackdrop"} %>
  <% end %>
</div>
<div class="container">
  <table class="table table-sm table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th><%= t('activerecord.attributes.signature.signature_cod') %></th>
        <th><%= t('activerecord.attributes.signature.short_name') %></th>
        <th><%= t('activerecord.attributes.signature.description') %></th>
        <% if user_signed_in? && current_user.role == 'admin' %>
          <th colspan="3"></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @signatures.each do |signature| %>
        <tr>
          <td style="font-weight: bold; font-size: 14px;"><%= signature.signature_cod %></td>
          <td><%= signature.short_name %></td>
          <td><%= signature.description %></td>
          <% if user_signed_in? && current_user.role == 'admin' %>
            <td  style="width: 75px;">
              <%= link_to (render 'renders/button_show_small_icon'), signature, class:"btn btn-info btn-sm" %>
              <%= link_to (render 'renders/button_edit_small_icon'), edit_signature_path(signature),  {class:"btn btn-primary btn-sm", 'data-toggle' => "modal", 'data-target' => "#" + 'signature' + signature.id.to_s} %>
              <div class="modal fade" id=<%= 'signature' + signature.id.to_s %> data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true")>
                <% @header_edit = t('helpers.submit.signature.update') %>
                <%= render 'modal_signature', signature: signature%>
              </div>
            </td>
            <td><%= link_to (render 'renders/button_delete_small_icon'), signature, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true")>
  <% @header_new = t('helpers.submit.signature.create') %>
  <%= render 'modal_signature', signature: @signature%>
</div>


<% if (@error_signature == true) %>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script>
    $(document).ready(function(){
      $("#myModal").modal('show');
    });
  </script>
  <div id="myModal" class="modal fade">
      <%= render 'modal_signature', signature: @signature%>
  </div>
<% end %>

