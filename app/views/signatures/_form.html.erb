<%= form_with(model: signature) do |form| %>
  <% if signature.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(signature.errors.count, "error") %> prohibited this signature from being saved:</h2>

      <ul>
        <% signature.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    
    <div class="col-sm">

      <div class="field">
        <%= form.label :"Kod Sygnatury" %>
        <%= form.number_field :signature_cod, class:"form-control form-control-sm" %>
      </div>

      <div class="field">
        <%= form.label :Nazwa %>
        <%= form.text_field :short_name, class:"form-control form-control-sm" %>
      </div>

      <div class="field">
        <%= form.label :Opis %>
        <%= form.text_area :description, class:"form-control form-control-sm" %>
      </div>

      <div class="actions">
        <%= form.submit class:"btn btn-primary btn-sm"%>
      </div>
    </div>
    
  </div>
<% end %>
