<div class="jumbotron">
  
<%= render 'renders/jumbotron_currency' %>

</div>

<h2>Waluty</h2>
 <table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
  <tr>
      <th>COD</th>
      <th>Waluta</th>
      <th>Drobne</th>
      <th>Active</th>
      <th>Data wymiany</th>
      <th>wymiana na</th>
      <th>przelicznik</th>
      <th>Rodzaj</th>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @currencies.each do |currency| %>
    <tr>
      <td><%= currency.cod %></td>
      <td><%= currency.currency %></td>
      <td><%= currency.change %></td>
      <td><%= currency.active %></td>
      <td><%= currency.data_exchange %></td>
      <td><%= currency.currency_from %></td>
      <td><%= currency.converter %></td>
      <td><%= currency.pattern %></td>
      <td><%= currency.description %></td>
      

      <td><%= link_to 'Show', bond_show_currency_path(currency) %></td>
      <td><%= link_to 'Edit', edit_currency_path(currency) %></td>
      <td><%= link_to 'Destroy', currency, method: :delete, data: { confirm: 'Are you sure?' } %></td> 


    </tr>
    <% end %>
</table>