<h3>Monety NA SPRZEDAŻ</h3>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
  <tr>
      <th>Id</th>
      <th>Nominał</th>
      <th>Waluta</th>
      <th>Rok</th>
      <th>Skład</th>
      <%
=begin%>
 <th>SIG</th> 
<%
=end%>
      <%
=begin%>
 <th>Status</th> 
<%
=end%>
      <th>Stan</th>
      <% if user_signed_in? && current_user.role == 'admin' %>
        <th>Kupno</th>
      <% end %>
      <th>Cena</th>
      <th>Averse</th>
      <th>Reverse</th>

    </tr>
  </thead>
  <% @coins.each do |coin| %>

      <tr>
        <td><%= coin.id %></td>
        <td><%= coin.denomination %></td>
        <td><%= coin.name_currency %></td>
        <td><%= coin.coin_date %></td>
        <td><%= coin.composition %></td>
        <%
=begin%>
 <td><%= coin.signature_code %></td> 
<%
=end%>
        <%
=begin%>
 <td><%= coin.status %></td> 
<%
=end%>
        <td><%= coin.quality %></td>
        <% if user_signed_in? && current_user.role == 'admin' %>
          <td><%= coin.price_buy %></td>
        <% end %>
        <td><%= coin.price_sell.to_s + "zł" %></td>
        <td>        
        	<% if (coin.avers_path.length > 200) %>
            	<%= image_tag(coin.avers_path, :alt => "AVERSE" , style:"width:100%;height:100%;") %>
            <% else %>
            	<%= coin.avers_path %>
            <% end %> 
        </td>
        <td>        
            <% if (coin.reverse_path.length > 200) %>
            	<%= image_tag(coin.reverse_path, :alt => "AVERSE" , style:"width:100%;height:100%;") %>
            <% else %>
            	<%= coin.reverse_path %>
            <% end %> 
        </td>
        
      </tr>
     <!-- <%= (coin.avers_path.length) %> -->
  <% end %>
</table>