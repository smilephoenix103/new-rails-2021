<div class="modal-dialog" style="max-width: 100%">
  <div class="modal-content">
    <div class="modal-header" style="background: lightgray">
      <h5 class="modal-title" id="staticBackdropLabel" >
        <b>Id:</b>  <%= coin.id %> |
        <%= render 'renders_item/denomination', item: coin %>|
        <b><%= t('activerecord.attributes.coin.coin_date') + ":" %></b> <%= coin.coin_date %> |
        <%= render 'renders_item/price_sell', item: coin %> |
        <%#= render 'note_dimension', note: note %>
      </h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body" style="background: black">
      <%= image_tag(image, :alt => "REVERSE" , style:"width:100%") %>
    </div>
    <div class="modal-footer" style="background: lightgray">
      <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal"><%= render ('renders/button_close') %></button>
    </div>
  </div>
</div>