<p id="notice"><%= notice %></p>

<h1>Reports</h1>
<%= link_to 'New Report', new_report_path, class:"btn btn-primary btn-sm" %>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Report</th>
      <!-- <th>String</th> -->
      <th>Name</th>
<!--      <th>Description</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td class="pt-1 pb-1" style="font-weight: bold"><%= report.report %></td>
        <!-- <td><%= report.string %></td> -->
        <td class="pt-1 pb-1"><%= report.name %></td>
<!--        <td class="pt-1 pb-1"><%#= report.description %></td>-->
        <td class="pt-1 pb-1 pl-1 pr-1" style="width: 80px">
          <%= link_to render('renders/button_show_small_icon'), report, {class:"btn btn-info btn-sm", 'data-toggle' => "modal", 'data-target' => "#" + "R"+ report.id.to_s}  %>
          <div class="modal fade" id=<%= "R" + report.id.to_s %> data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <%= render 'show_modal', report: report %>
          </div>
          <%= link_to render('renders/button_edit_small_icon'), edit_report_path(report), class: "btn btn-primary btn-sm"%>
        </td>
        <td class="pt-1 pb-1"><%= link_to render('renders/button_delete_small_icon'), report, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

