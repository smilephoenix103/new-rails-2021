<p id="notice"><%= notice %></p>
<div>
	<nav class="navbar navbar-light bg-light">
  		<form class="form-inline" action="/note_search">
    		<input class="form-control mr-sm-2" name="q" placeholder="Search" aria-label="Search" >
    		<button class="btn btn-outline-success my-2 my-sm-0" type="submit">
				<%= render 'renders/button_search' %>
			</button>
    	</form>
	</nav>
</div>

<% @root_path = Rails.root.join('app', 'assets', 'images','flags') %> 
<div class="container background-flags ">
  <div class="row">
  	<% @countries.each do |country| %>
  	<div class="col-md-2 position-flag" >  	
    	
  		<% if (File.exist?(@root_path + (country.country_en + '.png'))) %>
		  <div class="country-flag">
		  <%= link_to country.country_en, note_currencies_path(country) %><br/>
        	<%= image_tag("flags/" + country.country_en + ".png", :alt => country.country_en , class:"size-flag") %>
		  </div>
        <% else %>
			<div class="country-flag">
			<%= link_to country.country_en, note_currencies_path(country) %><br/>
				<%= image_tag("flags/test.png", :alt => "rss feed" , class:"size-flag") %>
			</div>
    	<% end %>
  	</div> 
  	<% end %>
  </div>
</div>
