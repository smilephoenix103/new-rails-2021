  <% if @response_code =="200" %>
    <%= "Data - " + @exchange.effectiveDate %>
      <table class="table table-striped table-bordered table-hover table-sm">
        <thead class="thead-dark">
            <tr>
                <th>Waluta</th>
                <th>Kod</th>
                <th>Sredni</th>
            </tr>
        </thead>
        <% @exchange.rates.each do |rate| %>
            <tr>
                <td><%= rate.currency %></td>
                <td><%= rate.code %></td>
                <td><%= rate.mid %></td>
            </tr>
        <% end %>

      </table>
  <% else %>
    <B>KOD-</B><%=@response_code %>
  <% end %>
