<h2>SOLD</h2>
<%
=begin%>
 <%= render 'renders/show_notes' %> 
<%
=end%>
<% @notes.each do |note| %>
    <div class="container row">
        <div class="page-header col-md-1" style="border-right: solid;border-color: darkgray;">
            <B>Id: </B>	<%= note.id %>
        </div>

        <div class="col-md-3">	       
        	<% if (note.avers_path.length > 200) %>
            	<%= image_tag(note.avers_path, :alt => "AVERSE" , style:"width:100%") %>
            <% else %>
            	<%= note.avers_path %>
            <% end %> 
              <hr class="my-2">
        	<% if (note.reverse_path.length > 200) %>
            	<%= image_tag(note.reverse_path, :alt => "REVERSE" , style:"width:100%") %>
            <% else %>
            	<%= note.reverse_path %>
            <% end %>         
        </div>

        <div class="page-header col-md-6" style="margin-left:0%">
            <B>Year: </B> <%= note.note_date %><br/>
            <B>Currency: </B> 
            <% if note.denomination >= 1 %>
                <%= number_to_currency(note.denomination, delimiter: " ", unit: "", precision: 0) + " " + note.name_currency %>
            <% else %>
                <%= number_to_currency(note.denomination, delimiter: " ", unit: "", precision: 2) + " " + note.name_currency %>
            <% end %><br/>
            <B>Making: </B> <%= note.making %><br/>
            <B>Quality: </B> <%= note.quality %><br/>
            <B>Price Buy: </B> <%= note.price_buy %><span>zł</span><br/>
            <B>Price Sell: </B> <%= note.price_sell %><span>zł</span><br/>
            <B>Profit: </B> <%= note.price_sell - note.price_buy %><span>zł</span><br>
            <B>Description: </B><br/>
            <%= note.description %>

        </div>

        <div class="page-header col-md-2" style="border-left: solid;border-color: darkgray;">
            <%= link_to (render 'renders/button_show'), note_path(note), class:"btn btn-info btn-sm" %>
        </div>

    </div>
     <hr class="my-4">
<% end %>

