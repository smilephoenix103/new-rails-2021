<p id="notice"><%= notice %></p>

    <% @root_path = Rails.root.join('app', 'assets', 'images','flags') %>
    

<%= link_to 'Add New Country', new_country_path, class:"btn btn-secondary" %>
<br/><br/>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
      <th>Continent</th>
      <th>Country en</th>
      <th>Country pl</th>
      <th>Flag</th>
      <th>Capital city</th>
      <th>Alfa 2</th>
      <th>Alfa 3</th>
      <th>Numeric code</th>
      <th>Iso code</th>
      <th>Exists</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.continent %></td>
        <td><%= country.country_en %></td>
        <td><%= country.country_pl %></td>
        <td>
          <% if (File.exist?(@root_path + (country.country_en + '.png'))) %>
            <%= image_tag("flags/" + country.country_en + ".png", :alt => "rss feed" , style:"width:100%;height:100%;") %>
          <% else %>
            <%= image_tag("flags/test.png", :alt => "rss feed" , style:"width:100%;height:100%;") %>
          <% end %>
        </td> 
        <td><%= country.capital_city %></td>
        <td><%= country.alfa_2 %></td>
        <td ><%= country.alfa_3 %></td>
        <td><%= country.numeric_code %></td>
        <td><%= country.iso_code %></td>
        <td><%= country.exists %></td>
        <td><%= link_to 'Show', country %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>