<%= form_with(model: country) do |form| %>
  <% if country.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(country.errors.count, "error") %> prohibited this country from being saved:</h2>

      <ul>
        <% country.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  


	<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
      <div class="col field ">
        <%= form.label :continent %><br/>
        <%= form.select :continent, Continent.all.map { |p| [p.name_pl, p.name_pl]}, class:"form-control form-control-sm" %>
      </div>

      <div class="col field">
        <%= form.label :country_en %>
        <%= form.text_field :country_en, class:"form-control form-control-sm" %>
      </div>

      <div class="col field">
        <%= form.label :country_pl %>
        <%= form.text_field :country_pl, class:"form-control form-control-sm" %>
      </div>

      <div class="col field">
        <%= form.label :capital_city %>
        <%= form.text_field :capital_city, class:"form-control form-control-sm" %>
      </div>

      <div class="col field">
        <%= form.label :alfa_2 %>
        <%= form.text_field :alfa_2, class:"form-control form-control-sm" %>
      </div>

      <div class="col field">
        <%= form.label :alfa_3 %>
        <%= form.text_field :alfa_3, class:"form-control form-control-sm" %>
      </div>

      <div class="col field">
        <%= form.label :numeric_code %>
        <%= form.text_field :numeric_code, class:"form-control form-control-sm" %>
      </div>

      <div class=" col field">
        <%= form.label :iso_code %>
        <%= form.text_field :iso_code, class:"form-control form-control-sm" %>
      </div>

      <div class="col field">
        <%= form.label :exists %>
        <%= form.select :exists, [true, false], class:"form-control form-control-sm" %>
      </div>
      <div class="field ">
        <%= form.label :description %>
        <%= form.text_area :description, class:"form-control form-control-sm", placeholder: t('activerecord.attributes.country.description') %>
      </div>
  </div>
      <div class="actions">
        <%= form.submit class:"btn btn-sm btn-primary" %>
      </div>
    <% end %>    

