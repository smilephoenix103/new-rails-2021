<div class="modal-dialog modal-xl" style="max-width: 100%">
  <div class="modal-content">
    <div class="modal-header" style="background: lightgray; padding: 0">
      <div class="container modal-title center-row" id="staticBackdropLabel" style="max-width: 500px; min-width: 150px">
        <% @country = coin.currency.country %>
        <%= render 'renders/show_flag_country' %>

      </div>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= render 'coin_collection/show_coin', coin: coin %>
    </div>
    <div class="modal-footer" style="background: lightgray; display: flow-root; padding: 0">
      <% if user_signed_in? && current_user.role == 'admin' %>
        <%= link_to (render 'renders/button_edit'), edit_coin_path(coin), {class:"btn btn-primary btn-sm", 'onclick' => "myFunction()" } %>
      <% end %>
      <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal" style="float: right" ><%= render ('renders/button_close')%></button>
    </div>
  </div>
</div>