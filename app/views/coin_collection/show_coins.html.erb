<h3>MONETY</h3>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
  <tr>
      <th>Id</th>
      <th>Nominał</th>
      <th>Waluta</th>
      <th>Rok</th>   
      
      <th>Stan</th>
      <% if user_signed_in? && current_user.role == 'admin' %>
        <th>SIG</th>
        <th>Status</th>
        <th>Kupno</th>
         <th>Cena</th>
      <% end %>
      
      <th>Averse</th>
      <th>Reverse</th>
      <th></th>

    </tr>
  </thead>
  <% @coins.each do |coin| %>

      <tr>
        <td><%= coin.id %></td>
        <td><%= coin.denomination %></td>
        <td><%= coin.name_currency %></td>
        <td><%= coin.coin_date %></td>
              
        
        <td><%= coin.quality %></td>
        <% if user_signed_in? && current_user.role == 'admin' %>
          <td><%= coin.signature_code %></td>
          <td><%= coin.status %></td>
          <td><%= coin.price_buy %></td>
          <td><%= coin.price_sell.to_s + "zł" %></td>
        <% end %>
        
        <td>        
        	<% if (coin.avers_path.length > 200) %>
            <img src=<%= coin.avers_path %> alt = <%= coin.avers_path %> style="width:50%;height:50%;" >

            	<%
=begin%>
 <%= image_tag(note.avers_path, :alt => "AVERSE" , style:"width:100%;height:100%;") %> 
<%
=end%>
            <% else %>
            	<%= coin.avers_path %>
            <% end %> 
        </td>
        <td>        
            <% if (coin.reverse_path.length > 200) %>
              <img src=<%= coin.reverse_path %> alt = <%= coin.reverse_path %> style="width:50%;height:50%;" >

            	<%
=begin%>
 <%= image_tag(note.reverse_path, :alt => "AVERSE" , style:"width:100%;height:100%;") %> 
<%
=end%>
            <% else %>
            	<%= coin.reverse_path %>
            <% end %> 
            
        </td>
        <td><%= link_to 'Show', show_details_coin_path(coin), class:"btn btn-info" %></td>
      </tr>
  <% end %>
</table>
