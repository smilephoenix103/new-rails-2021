<% if  defined?(coin) %>
  <%@coin = coin %>
<% end %>
TU JESTEM
<span>
    <strong>Currency Id:
      <%= @coin.currency.currency_series %>
    </strong>
  </span>
  <h1 class="display-4" id="notice"></h1>
  <div class="container">
  <%= render 'renders/data_ad', dateAdMod: @coin %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4", style="font-size: small;">
    <% if user_signed_in? && current_user.role == 'admin' %>
      <div class="col">
        <strong>Data zakupu:</strong>
        <%= @coin.date_buy %>
      </div>  
      <div class="col">
        <strong>Miejsce zakupu:</strong>
        <%= @coin.bought %>
      </div>
      <div class="col">
        <strong>cena zakupu:</strong>
        <%= @coin.price_buy.to_s + "zł" %>
      </div>
      
      <div class="col">
        <strong>Cena:</strong>
        <%= @coin.price_sell.to_s + "zł" %>
      </div>         
    <% end %>
      <div class="col">
        <strong>Nominał:</strong>
        <%= number_with_delimiter(@coin.denomination, delimiter: " ") %>
      </div>
      <div class="col">
        <strong>Nazwa waluty:</strong>
        <%= @coin.name_currency %>
      </div>
      <div class="col">
        <strong>Data:</strong>
        <%= @coin.coin_date %>
      </div>
      <div class="col">
        <strong>SERIA:</strong>
        <%= @coin.series %>
      </div>
      <div class="col">
        <strong>Signature code:</strong>
        <%= @coin.signature_code %>
      </div>
    
      
      <div class="col">
        <strong>Ilość:</strong>
        <%= @coin.quantity %> <%= @coin.unit_quantity %>
      </div>
      <div class="col">
        <strong>Stan banknotu:</strong>
        <%= @coin.quality %>
      </div>
      <div class="col">
        <strong>Materiał:</strong>
        <%= @coin.composition %>
      </div>

      <% if (@coin.diameter != nil) %>
        <div class="col">
          <strong>Diameter:</strong>
          <%= @coin.diameter.to_s + " mm" %>
        </div>
      <% end %>
      
      <% if (@coin.thickness != nil) %>
        <div class="col">
          <strong>Thickness:</strong>
          <%= @coin.thickness.to_s + " mm" %>
        </div>
      <% end %>

      <% if (@coin.weight != nil) %>
        <div class="col">
          <strong>Weight:</strong>
          <%= @coin.weight.to_s + " gr" %>
        </div>
      <% end %>

      <div class="col">
        <strong>typ obrazka:</strong>
        <%= @coin.img_type %> 
      </div>
      <div class="col">
        <strong>Status:</strong>
        <%= @coin.status %>
      </div>
      <% if (@coin.status_sell != "") %>
        <% if user_signed_in? && current_user.role == 'admin' %>
          <div class="col">
              <strong>Status sprzedaży:</strong>
              <%= @coin.status_sell %>
          </div>
        <% end %>
      <% end %>
      <div class="col" style="background: orange">
        <% if user_signed_in? && current_user.role == 'admin' %>
          <strong >Visible: </strong><%= @coin.visible %>
        <% end %>
      </div>
    </div>
  </div>
  <p>
    <strong>Description:</strong>
    <%= @coin.description %>
  </p>
  <hr class="my-1">

<% if  defined?(coin) %>
  <%@coin = coin %>
  <div class="row">
    <div class="col col-lg-6 center-row">
      <img src=<%= coin.avers_path %>, class="hover-shadow image-size-show">
    </div>
    <div class="col col-lg-6 center-row">
      <img src=<%= coin.reverse_path %>, class="hover-shadow image-size-show">
    </div>
  </div>
<% else %>
  <% @avers = @coin.avers_path %>
  <% @reverse = @coin.reverse_path %>
  <%= render 'renders/show_image_lightbox' %>
<% end %>
