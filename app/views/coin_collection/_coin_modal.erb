<div class="modal-dialog modal-xl" style="max-width: 100%">
  <div class="modal-content">
    <div class="modal-header" style="background: lightgray; padding: 0">
      <div class="container modal-title center-row" id="staticBackdropLabel" >
        <div class="container " style="max-width: 500px; min-width: 150px; padding: 0">
          <% @country = coin.currency.country %>
          <%= render 'renders/show_flag_country' %>
        </div>

        <div class="container modal-title" id="staticBackdropLabel" style="width: 100%" >
          <strong>
            <%= t('activerecord.attributes.currency.currency_series') + ': ' %>
          </strong>
          <%= coin.currency.currency_series %> |
          <%= render 'renders_item/denomination', item: coin %>|
          <b><%= t('activerecord.attributes.coin.coin_date') + ":" %></b> <%= coin.coin_date %> |
          <%#= render 'note_for_sell/note_dimension', note: note %>
        </div>

      </div>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body" style="background: black">
      <%= image_tag(image, :alt => "REVERSE" , style:"max-height: 700px; max-width: 100%") %>
    </div>
    <div class="modal-footer" style="background: lightgray; display: flow-root; padding: 0">
      <%#= link_to (render 'renders/button_edit'), edit_note_path(note), {class:"btn btn-primary btn-sm", 'onclick' => "myFunction()" } %>
      <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal" style="float: right" ><%= render ('renders/button_close')%></button>
    </div>
  </div>
</div>