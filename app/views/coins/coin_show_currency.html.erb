<h3>COIN SHOW CURRENCY</h3>
<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h3 class="display-4">
      <strong>Państwo:</strong>
      <%= @currency.country.country_en %>
  </h3>
  <p>
    <strong>Cod:</strong><%= @currency.cod %>  |  
    <strong>Waluta:</strong><%= @currency.currency %>  |  
    <strong>Drobne:</strong><%= @currency.change %>
  </p>
  <p>
    <strong>Active:</strong><%= @currency.active %>  |  
    <strong>Data wymiany (Okres) : </strong><%= @currency.data_exchange %>
  </p>
  <p>
    <strong>Poprzedna waluta:</strong><%= @currency.currency_from %>  |  
    <strong>Przelicznik:</strong><%= @currency.converter %>
  </p>
  <p>
    <strong>Description:</strong><%= @currency.description %>
  </p>
  
 <%= link_to 'Edit', edit_currency_path(@currency), class:"btn btn-secondary" %> 
  <!-- <%= link_to 'Back', currencies_path(@currency) %> -->
  <%= link_to 'Back', coin_currencies_path(@currency.country_id), class:"btn btn-dark" %> 
  <%= link_to 'Add Coin', new_currency_coin_path(@currency), class:"btn btn-secondary" %> 
</div>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
  <tr>
      <th>Id</th>
      <th>Nominał</th>
      <th>Waluta</th>
      <th>Rok</th>
      <th>SIG</th>
      <th>Status</th>
      <th>Kupno</th>
      <th>Sprzedaż</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @collection.each do |coin| %>

      <tr>
        <td><%= coin.id %></td>
        <td><%= coin.denomination %></td>
        <td><%= coin.name_currency %></td>
        <td><%= coin.coin_date %></td>
        <td><%= coin.signature_code %></td>
        <td><%= coin.status %></td>
        <td><%= coin.price_buy %></td>
        <td><%= coin.price_sell %></td>

        <td><%= link_to 'Show', coin_path(coin) %></td>
        <td><%= link_to 'Edit', edit_coin_path(coin) %></td> 

        <td><%= link_to 'Destroy', coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

  <% end %>
  
</table>