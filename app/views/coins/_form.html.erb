<%= form_with(model: coin) do |form| %>
  <% if coin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :currency_id %>
    <%
=begin%>
 <%= form.text_field :currency_id %> 
<%
=end%>
    <%= form.text_field :currency_id, value:@coin.currency_id %>
  </div>

  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3">
      <div class="col field">
        <%= form.label :Data_zakupu %><br/>
        <%= form.date_select :date_buy, class:"form-control form-control-sm" %>
      </div>
      <div class="col col-lg-5 field">
        <div style="float:left">
          <%= form.label :Miejsce_zakupu %>
          <% form.text_field :bought, class:"form-control form-control-sm" %>
          <%= form.select :bought, Bought.all.map { |b| [b.name, b.name]}, {:include_blank => "Select (Miejsce zakupu)"}, class:"form-control  form-control-sm" %>
        </div>
        <div style="float:right; margin-top:7%">
          <%= link_to 'Nowe miejsce zakupu', new_bought_path, class:"btn btn-sm btn-primary", style:"float:left" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
    <div class="col field">
      <% form.label :Nominał %>
      <%= form.text_field :denomination, class:"form-control form-control-sm", placeholder:"Nominał"%>
    </div>
    <div class="col field ">
      <% form.label :Waluta %>
      <%= form.text_field :name_currency, class:"form-control form-control-sm", placeholder:"Nazwa waluty" %>
    </div>
    <div class="col field">
      <% form.label :Seria %>
      <%= form.text_field :series, class:"form-control form-control-sm", placeholder:"Seria" %>
    </div>
    <div class="col field">
      <% form.label :Data %>
      <%= form.text_field :coin_date, class:"form-control form-control-sm", placeholder:"Data" %>
    </div>


    <div class="col field">
      <% form.label :diameter %>
      <%= form.text_field :diameter, class:"form-control form-control-sm", placeholder:"Średnica" %>
      <% coin.errors.messages_for(:diameter).each do |message| %>
        <div  class="alert alert-danger" role="alert"><%= message %></div>
      <% end %>
    </div>
    <div class="col field">
      <% form.label :thickness %>
      <%= form.text_field :thickness, class:"form-control form-control-sm", placeholder:"Grubość"  %>
      <% coin.errors.messages_for(:thickness).each do |message| %>
        <div  class="alert alert-danger" role="alert"><%= message %></div>
      <% end %>
    </div>
    <div class="col field">
      <% form.label :weight %>
      <%= form.text_field :weight, class:"form-control form-control-sm", placeholder:"Waga"  %>
      <% coin.errors.messages_for(:weight).each do |message| %>
        <div  class="alert alert-danger" role="alert"><%= message %></div>
      <% end %>
    </div>
    <div class="col field">
      <% form.label :quality %>
      <%= form.text_field :quality, class:"form-control form-control-sm", placeholder:"Stan Monety" %>
    </div>

    
    <div class="col field">
      <%= form.label :Sygnatura %>
      <%= form.number_field :signature_code, class:"form-control form-control-sm" %>
    </div>
    <div class="col field">
      <%= form.label :Kupna %>
      <%= form.text_field :price_buy, class:"form-control form-control-sm" %>
      <% coin.errors.messages_for(:price_buy).each do |message| %>
        <div  class="alert alert-danger" role="alert"><%= message %></div>
      <% end %>
    </div>
    <div class="field">
      <%= form.label :Sprzedaż %>
      <%= form.text_field :price_sell, class:"form-control form-control-sm" %>
      <% coin.errors.messages_for(:price_sell).each do |message| %>
        <div  class="alert alert-danger" role="alert"><%= message %></div>
      <% end %>
    </div>    
    <div class="col field">
      <%= form.label :Ilość %>
      <%= form.number_field :quantity, class:"form-control form-control-sm" %>
    </div>
   
 
    <div class="col field">
      <% form.label :Status %>
      <% form.text_field :status, class:"form-control form-control-sm" %>
      <%= form.select :status, (@statuses.collect { |s| [s[0], s[0]] }),  {:include_blank => "Select(Status)"}, class:"form-control form-control-sm"  %>  
      <% coin.errors.full_messages_for(:status).each do |message| %>
        <div  class="alert alert-danger" role="alert"><%= message %></div>
      <% end %>  
    </div>
    <div class="col field">
      <% form.label :Typ_obrazka %>
      <% form.text_field :img_type, class:"form-control form-control-sm" %> 
      <%= form.select :img_type, (@img_types.collect { |img| [img[0], img[0]] }),  {:include_blank => "Select(Typ Obrazka)"}, class:"form-control form-control-sm"  %>  
      <% coin.errors.messages_for(:img_type).each do |message| %>
        <div  class="alert alert-danger" role="alert"><%= message %></div>
      <% end %>  
    </div>
    <div class="field">
      <% form.label :status_sell %>
      <%= form.text_field :status_sell, class:"form-control form-control-sm", placeholder:"Status sprzedaży"%>
    </div>

    <div class="col col-lg-6 field">
      <% form.label :composition %>
      <%= form.text_area :composition, class:"form-control form-control-sm", placeholder:"Skład monety" %>
    </div>

    <div class="col col-lg-6 field">
      <% form.label :description %>
      <%= form.text_area :description, class:"form-control form-control-sm", placeholder:"opis"%>
    </div>
  </div>
    <div class="field">
      <% form.label :avers_path %>
      <%= form.text_field :avers_path, class:"form-control form-control-sm", placeholder:"AVERS PATH" %>
    </div>

    <div class="field">
      <% form.label :reverse_path %>
      <%= form.text_field :reverse_path, class:"form-control form-control-sm", placeholder:"REVERSE PATH" %>
    </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary btn-sm" %>
  </div>
<% end %>
