
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header" style="text-align: center; justify-content: center">
      <h3 class="modal-title" id="staticBackdropLabel">BOUGHT</h3>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body" style="background: #a7a8a8">
      <b>Name: </b><br/>
      <%= bought.name%><br/><br/>

      <b>Full Naem: </b> <br/>
      <%= bought.full_name %><br/><br/>

      <b>Description: </b><br/>
      <%= bought.description %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal"><%= render ('renders/button_close') %></button>
    </div>
  </div>
</div>