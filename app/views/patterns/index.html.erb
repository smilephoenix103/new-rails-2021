<div>
  <h1>Patterns</h1>
  <%= link_to 'New Pattern', new_pattern_path, class:"btn btn-primary" %>
</div>
<div>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Id</th>
        <th>Name en</th>
        <th>Name pl</th>      
        <th>Description</th>
        <th ></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @patterns.each do |pattern| %>
        <tr>
          <th><%= pattern.id %></td>
          <td><%= pattern.name_en %></td>
          <td><%= pattern.name_pl %></td>        
          <td><%= pattern.description %></td>
          <td>
            <%= link_to 'Show', pattern, class:"btn btn-info btn-sm"%>
            <%= link_to 'Edit', edit_pattern_path(pattern), class:"btn btn-primary btn-sm" %>
          </td>
          <td>
            <%= link_to 'Destroy', pattern, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm", style:"float: right"  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>


