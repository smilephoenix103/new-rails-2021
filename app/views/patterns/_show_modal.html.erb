<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header" style="text-align: center; justify-content: center">
      <h3 class="modal-title" id="staticBackdropLabel">PATTERN</h3>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body" style="background: #a7a8a8">
      <p><b>Name En: </b><%= pattern.name_en %></p>
      <p><b>Name Pl: </b><%= pattern.name_pl %></p>
      <p><b>Description: </b><%= pattern.description %></p>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal"><%= render ('renders/button_close') %></button>
    </div>
  </div>
</div>