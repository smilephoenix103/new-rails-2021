<div>    
    <table class="table table-striped table-bordered table-hover table-sm table-fs">
        <thead class="thead-dark">
            <tr>
                <th style="min-width:30px; max-width: 30px;">Lp.</th>
                <th><%= t('country') %></th>
                <th><%= t('note') %></th>
                <th><%= t('activerecord.attributes.note.note_date') %></th>
                <th><%= t('activerecord.attributes.note.making') %></th>
                <th><%= t('activerecord.attributes.note.quality') %></th>
                <th><%= t('activerecord.attributes.note.quantity') %></th>
                <th><%= t('price') %></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% notes.each_with_index do |note, count| %>
                <tr>
                    <td style="text-align: right; min-width:30px; max-width: 30px;"><%= count+1 %></td>
                    <td><%= note.currency.country.country_en %> </td>
                    <td><%= number_to_currency(note.denomination.to_s, unit: "", separator: ".", delimiter: " ", strip_insignificant_zeros: true) + " " + note.name_currency %></td>
                    <td><%= note.note_date %></td>
                    <td><%= note.making %></td>
                    <td><%= note.quality %></td>
                    <td><%= note.quantity %></td>
                    <td class="price buy"><%= number_to_currency(note.price_buy, unit:" Â£", precision: 2, format: "%u%n") %></td>
                    <td>
                        <%= link_to (render 'renders/button_edit_small_icon'), edit_note_path(note), class:"btn btn-primary btn-sm btn-vsm" %>
                        <%= link_to (render 'renders/button_show_small_icon') ,show_note_future_path(note), class:"btn btn-info btn-sm btn-vsm" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>