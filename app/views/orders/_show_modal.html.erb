<div class="modal-dialog modal-md">
  <div class="modal-content">
    <div class="modal-header" style="background: lightgray; padding: 0">
      <div class="container modal-title center-row" id="staticBackdropLabel">
        <h2>ORDER</h2>

      </div>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= render 'show',order: order %>
    </div>
    <div class="modal-footer" style="background: lightgray; display: flow-root; padding: 0">
      <%= link_to (render 'renders/button_edit'), edit_order_path(order), class:"btn btn-sm btn-primary" %>
      <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal" style="float: right" ><%= render ('renders/button_close')%></button>
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<script>
    function myFunction() {

        $('.modal-backdrop').remove();
        $("[data-dismiss=modal]").trigger({ type: "click" });


    }


</script>



