<div>
  <h1><%= t('type_charts') %></h1>

  <%= link_to 'New Chart', new_chart_path, class:"btn btn-primary btn-sm" %><br>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark" style="font-size: 14px">
    <tr>
      <th>Id</th>
      <th><%= t('activerecord.attributes.chart.name') %></th>
      <th><%= t('activerecord.attributes.chart.description') %></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @charts.each do |chart| %>
      <tr>
        <td class="pt-1 pb-1"><%= chart.id %></td>
        <td class="pt-1 pb-1"><%= chart.name %></td>
        <td class="pt-1 pb-1"><%= chart.description %></td>
        <td class="pt-1 pb-1">
          <%= link_to (render 'renders/button_show_small_icon'), chart, {class:"btn btn-info btn-sm", 'data-toggle' => "modal", 'data-target' => "#" + "Ch"+ chart.id.to_s} %>
          <div class="modal fade" id=<%= "Ch" + chart.id.to_s %> data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <%= render 'show_modal', chart: chart %>
          </div>
          <%= link_to (render 'renders/button_edit_small_icon'), edit_chart_path(chart), class:"btn btn-primary btn-sm" %></td>
        <td class="pt-1 pb-1"><%= link_to (render 'renders/button_delete_small_icon'), chart, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>