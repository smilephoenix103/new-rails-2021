      <ul>
        <% chart.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="col-4 field">
      <%= form.label :name %>
      <%= form.text_field :name, class:"form-control form-control-sm"  %>
