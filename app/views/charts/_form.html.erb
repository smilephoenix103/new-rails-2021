        <div  class="alert alert-danger" role="alert"><%= message %></div>
      <% end %>
    </div>
    <div class="col-4 field">
      <%= form.label :description %>
      <%= form.text_area :description, class:"form-control form-control-sm"  %>
    </div>
  <div class="actions">
    <%= form.submit class:"btn btn-primary btn-sm" %>
  </div>
<% end %>
