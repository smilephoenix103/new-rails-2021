<%#= render 'renders/data_ad', dateAdMod: @order_item.bond %>
<div class="jumbotron jumbotron-fluid mb-1 pb-1">
  <div class="container row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <%= render 'renders/show_flag_country' %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
  <div class="container">
    <div class="shadow" style="background: #dee2e6">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 pb-0 pt-0", style="font-size: small;">
        <div class="col pb-0 pt-0">
          <b>Denomination: </b><%= @order_item.bond.denomination %> <%= @order_item.bond.name_currency %>
        </div>
        <div class="col pb-0 pt-0">
          <b>Year: </b><%= @order_item.bond.bond_date %>
        </div>
        <div class="col pb-0 pt-0">
          <b>Currency Series: </b><%= @order_item.bond.currency.currency_series %>
        </div>

      </div>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 pb-0 pt-0", style="font-size: small;">
        <div class="col pb-0 pt-0">
          <b>Quality: </b><%= @order_item.bond.quality %>
        </div>
        <div class="col pb-0 pt-0">
          <b>Making: </b><%= @order_item.bond.making %>
        </div>
      </div>
      <% if (@order_item.bond.width != nil && @order_item.bond.height != nil) %>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 pb-0 pt-0", style="font-size: small;">
          <div class="col pb-0 pt-0">
            <div class="pl-0" style="float: left">
              <b>Width: </b><%= @order_item.bond.width %><span>mm</span>
            </div>
            <div style="float: left;">
              <b>Height: </b><%= @order_item.bond.height %><span>mm</span>
            </div>
          </div>
        </div>
      <% end %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 pb-0 pt-0", style="font-size: small;">
        <div class="col pb-0 pt-0">
          <b>Price Buy: </b><%= @order_item.bond.price_buy %>
        </div>
        <div class="col pb-0 pt-0">
          <b>Price Sell: </b><%= @order_item.bond.price_sell %>
        </div>
        <div class="col pb-0 pt-0">
          <b>Sell Quantity: </b><%= @order_item.quantity %><%= @order_item.unit_quantity %>
        </div>
        <div class="col pb-0 pt-0">
          <b>Final Price: </b><%= @order_item.final_price %>
        </div>
      </div>
    </div>

    <div>
      <% @avers = @order_item.bond.avers_path %>
      <% @reverse = @order_item.bond.reverse_path %>
      <hr class="my-1">
      <%= render 'renders/show_image_lightbox' %>
    </div>
  </div>
</div>
<%#= @order_item.bond.inspect %>